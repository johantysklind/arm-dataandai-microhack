{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "adminUser": {
            "type": "string",
            "defaultValue": "moviespotadmin"
        },
        "adminPassword": {
            "type": "securestring",
            "minLength": 8
        },
        "storageAccountKey": {
            "type": "securestring",
            "minLength": 1,
            "defaultValue": "sp=rl&st=2021-03-11T23:29:56Z&se=2026-03-12T06:29:56Z&spr=https&sv=2020-02-10&sr=c&sig=D5jy97qh7LmF6GxHNcWAl5AcjcXK7BOxW5HxeQlU3BM%3D"
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]"
        }
    },
    "resources": [
        {
            "apiVersion": "2017-05-10",
            "name": "deploySQLDB",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "./artifacts/sqldbdeploy.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "adminUser": {
                        "value": "[parameters('adminUser')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "storageAccountKey": {
                        "value": "[concat('?', parameters('storageAccountKey'))]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    }
                }
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "deployCosmosDB",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "relativePath": "./artifacts/cosmosdeploy.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "location": {
                        "value": "[parameters('location')]"
                    }
                }
            }
        }
    ]
}